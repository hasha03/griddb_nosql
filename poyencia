        <script>
            function potencia(a,b)
    {
       if(b==0)
           return 1; 
       // Caso recursivo
        else
           return a * potencia(a,b-1);
    }
        var a = Number(prompt("Digitalize el primer numero: "));
        var b = Number(prompt("Digitalize el segundo numero: "));
        document.write("La potencia de "+a+"^("+b+") es: "+potencia(a,b));
            </script>
